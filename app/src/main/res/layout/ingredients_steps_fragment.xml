<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        android:id="@+id/ing_step_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.recipe.RecipeDetailFragment"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginTop="2dp"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        android:text="@string/favoriteTitle"
        android:textStyle="bold" />

        <ImageView
        android:id="@+id/iv_toggle"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:contentDescription="@string/favoriteTitle"
        android:src="@drawable/selector_toggle_button" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layout_marginTop="2dp"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:textSize="18sp"
            android:text="@string/ingredientsTitle"
            android:textStyle="bold" />



        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_ingredients"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="190dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layout_marginTop="2dp"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:textSize="18sp"
            android:text="@string/stepsTitle"
            android:textStyle="bold" />



        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_steps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>
